---
layout: base.njk
---

<div class="container">
    <article class="blog-post">
        <header class="post-header">
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <time datetime="{{ date | date('YYYY-MM-DD') }}">
                    {{ date | date('MMMM DD, YYYY') }}
                </time>
            </div>
        </header>
        
        <div class="post-content">
            {{ content | safe }}
        </div>
        
        <footer class="post-footer">
            <a href="/blog/" class="back-to-blog">‚Üê Back to Blog</a>
        </footer>
    </article>
</div>